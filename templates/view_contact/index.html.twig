{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-bordered">
        <thead>
            <tr class="text-center">
                <td>
                    #
                </td>
                <td>
                    Title
                </td>
                <td>
                    First Name
                </td>
                <td>
                    Last Name
                </td>
                <td>
                    Email Address
                </td>
                <td>
                    Telephone
                </td>
                <td>
                    Message
                </td>
                <td>
                    Admin Replied
                </td>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>
                        <a class="text-decoration-none" href="{{ path('app_manage_contact', {id: contact.id}) }}">
                            {{ contact.id }}
                        </a>
                    </td>
                    <td>
                        {{ contact.title }}
                    </td>
                    <td>
                        {{ contact.firstName }}
                    </td>
                    <td>
                        {{ contact.lastName }}
                    </td>
                    <td>
                        {{ contact.email ?? 'No Email' }}
                    </td>
                    <td>
                        {{ contact.telephone }}
                    </td>
                    <td>
                        {{ contact.message }}
                    </td>
                    <td>
                        {{ (contact.adminReplied == 1) ? "Yes" : 'No' }}
                    </td>
                </tr>

            {% endfor %}
        </tbody>
    </table>
    {% include 'paginator/paginator.html.twig' %}
{% endblock %}
