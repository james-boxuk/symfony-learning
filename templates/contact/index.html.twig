{% extends 'base.html.twig' %}
{% set row_attr = {class: 'testing-class' } %}
{% set admin_reply = admin_reply|default(false) %}
{% block body %}
        {{ form_start(form, {'action': path('app_contact')}) }}
            {{ form_row(form.title) }}
            {{ form_row(form.other) }}
            {{ form_row(form.first_name) }}
            {{ form_row(form.last_name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.telephone) }}
            {{ form_row(form.message) }}
            {% if admin_reply %}
                {{ form_row(form.admin_message) }}
            {% endif %}
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
{% endblock %}
